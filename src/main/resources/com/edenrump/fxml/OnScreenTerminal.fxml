<?xml version="1.0" encoding="UTF-8"?>

<?import com.edenrump.ui.controls.LinuxTextField?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.*?>
<StackPane xmlns="http://javafx.com/javafx"
           xmlns:fx="http://javafx.com/fxml"
           fx:controller="com.edenrump.controllers.TerminalController"
           fx:id="terminalBaseStackLayer"
           AnchorPane.bottomAnchor="65.0"
           AnchorPane.rightAnchor="15.0">

    <AnchorPane fx:id="terminalAnchorLayer" prefHeight="150.0" prefWidth="600.0" style="-fx-background-color: black;">
        <HBox fx:id="terminalInputContainer" alignment="CENTER_LEFT" layoutX="36.0" layoutY="270.0" prefHeight="30.0"
              AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0">
            <Label fx:id="leftMessageDisplay"/>
            <LinuxTextField fx:id="terminalInputField" HBox.hgrow="ALWAYS"/>
        </HBox>
        <ScrollPane fitToHeight="true" fitToWidth="true" mouseTransparent="true" AnchorPane.bottomAnchor="30.0"
                    AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
            <VBox fx:id="terminalMessageDisplay"/>
        </ScrollPane>
    </AnchorPane>
</StackPane>
